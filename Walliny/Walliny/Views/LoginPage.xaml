<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Walliny.ViewModels;assembly=Walliny"
             x:Class="Walliny.Views.LoginPage"
             Title="Login">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical"
                 VerticalOptions="Center"
                 Spacing="20"
                 Padding="20">

        <Entry x:Name="Username" Text="{Binding Username}" 
               Placeholder="username"/>

        <Entry x:Name="Password" Text="{Binding Password}"
               Placeholder="password"
               IsPassword="True"/>

        <Button Command="{Binding LoginCommand}"
                Text="Signin"
                TextColor="White"
                FontSize="30"
                BackgroundColor="DodgerBlue"
                Clicked="LoginPage_OnClicked"/>

        <!-- <Button Text="Go to Ideas Page"
                Clicked="NavigateToIdeasPage_OnClicked" />-->
        <Label x:Name="context"/>
    </StackLayout>

</ContentPage>